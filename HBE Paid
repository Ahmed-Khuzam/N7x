                                                vehicle.PrimaryPart.CFrame = CFrame.new(lastPos)
                                                print(player.Name .. " Ø­Ø§ÙˆÙ„ Ø§Ù„Ù†Ù‚Ù„ Ø¨Ø§Ù„Ù‡Ø§Ùƒ! ðŸš¨ Ø¥Ø¹Ø§Ø¯Ø© Ø§Ù„Ø³ÙŠØ§Ø±Ø© Ù„Ù…ÙƒØ§Ù†Ù‡Ø§.")
